function getPlanInfos() {
    var orderIds = "";
    var data = {};
    var allTableData = $("#orderList").bootstrapTable('getData'); //获取表格的所有内容行 
    for (i = 0; i < allTableData.length; i++) {
        var row = allTableData[i];
        if (row.state == '1') {
            orderIds = orderIds + "," + row.orderId;
        }
    }
    data.orderId = orderIds;

}

