function saveFun(){
	$('#contractForm').data('bootstrapValidator').validate();
	 if(!$('#contractForm').data('bootstrapValidator').isValid()){  
		    //没有通过校验 
		 return false;
	 }else{
		 if(!canContractNumSubmit){
				bootbox.alert("合同编号与数据库重复");
				return false;
			}
			if(!canRzhgzSubmit){
				bootbox.alert("融资涵规则与数据库重复");
				return false;
			}
			if(!canFkhgzSubmit){
				bootbox.alert("付款涵规则与数据库重复");
				return false;
			}
		var list = $("#contractFilesTable").bootstrapTable('getData');
		if(list == null||list == ""){
			bootbox.alert("请上传附件！");
		}else{
	        var data = CloudUtils.convertStringJson('contractForm');
	        var jsonData = eval("(" + data + ")");
	        jsonData.contractMainList =list;
	        var options = {
	            url: '../contract/add',
	            data: JSON.stringify(jsonData),
	            callBackFun: function(data) {
	            	if (data.result == 0) {
	            		bootbox.alert("操作成功");
	            		$("#contractInfoModal").modal("hide");
	            		initTable();
	                } else {
	                    return false;
	                }
	            },
	            errorCallback: function(data) {
	                return false;
	            }
	        };
	        CloudUtils.ajax(options);
			    
		}
	 }
}

function contractFormValidator(){
 	$('#contractForm').bootstrapValidator({
 	      message: 'This value is not valid',
 	      excluded:':disabled',
 	      feedbackIcons: {
 	          valid: 'glyphicon glyphicon-ok',
 	          invalid: 'glyphicon glyphicon-remove',
 	          validating: 'glyphicon glyphicon-refresh'
 	      },
 	      fields: {
 	    	 contractName: {
	              validators: {
	                  notEmpty: {
	                      message: '合同名称不能为空'
	                  },
	              }
	          },
	          contractNum: {
 	    		 validators: {
 	    			 notEmpty: {
	                      message: '合同编号不能为空'
	                  },
 	    		 }
 	    	 },
 	    	 typeid:{
  	    		validators: {
  	    			notEmpty: {
 	                      message: '合同类型不能为空'
 	                  },
 	              }
  	    	 },
  	    	amount:{
  	    		validators: {
  	    			notEmpty: {
 	                      message: '额度不能为空'
 	                  },
 	                 numeric: {message: '只能输入数字'},
 	              }
  	    	 },
  	    	endDate:{
  	    		validators: {
  	    			notEmpty: {
 	                      message: '合同到期日不能为空'
 	                  },
 	              }
  	    	 },
  	    	rzhgz:{
  	    		validators: {
  	    			notEmpty: {
 	                      message: '融资涵规则不能为空'
 	                  },
 	              }
  	    	 },
 	    	 fkhgz:{
   	    		validators: {
   	    			notEmpty: {
  	                      message: '付款涵规则不能为空'
  	                  },
  	              }
   	    	 },
   	    	contractFilesTable:{
   	    		validators: {
   	    			notEmpty: {
  	                      message: '附件不能为空'
  	                  },
  	              }
   	    	 }
 	      }
 		})
 		.on('success.form.bv', function (e) {
 			e.preventDefault();
 		});	
 }


