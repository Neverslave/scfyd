function initTable() {
    $('#orderListTable').bootstrapTable('destroy');
    $("#orderListTable").bootstrapTable({
        method: "post",
        url: "../../orderQuery/orderListCheck",
        striped: false, //表格显示条纹  
        pagination: true, //启动分页  
