}
function getBusinessHallById(storeId){


    var options = {
    	url: "../../businessHall/list",
    	  data: '{"storeId": '+storeId+'}',
        callBackFun: function(data) {
            if (data.result == 0) {
            	CloudUtils.setForm(data.dataList[0], "searchForm");
            	initTable();
           }else{
                 bootbox.alert("导出失败");
           }    
            
        }
    };
    CloudUtils.ajax(options);

	
}
