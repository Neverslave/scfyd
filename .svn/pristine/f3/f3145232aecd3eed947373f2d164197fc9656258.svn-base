            formatter: function(value, row) {
                return $.number(value, 2);
            }
        },{
            field: 'ensure_money',
            title: '保证金',
            align: 'center',
            valign: 'middle',
            sortable : true,
            formatter: function(value, row) {
                return $.number(value, 2);
            }
        },{
            field: 'payed_time',
            title: '实付时间',
            align: 'center',
            valign: 'middle',
            sortable : true
        },{
            field: 'repayment_money',
