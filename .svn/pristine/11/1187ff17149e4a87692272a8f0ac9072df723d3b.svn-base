		paramMap.put("keyCode", "oiUHf8y282asjn218hsadwq234sfda");
		paramMap.put("rePayDateS", startDate);
		paramMap.put("rePayDateE", endDate);
		String result = HttpConnection.sendGet(paramMap, url);
		logger.info("获取到的超人还款信息{}", result);
