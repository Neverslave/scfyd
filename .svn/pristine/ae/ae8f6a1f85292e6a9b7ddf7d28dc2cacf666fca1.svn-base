         url: "", 
         striped: true,  //表格显示条纹  
         pagination: false, //启动分页  
         search: false,  //是否启用查询  
         showColumns: false,  //显示下拉框勾选要显示的列  
         showRefresh: false,  //显示刷新按钮  
         sidePagination: "server", //表示服务端请求  
         //设置为undefined可以获取pageNumber，pageSize，searchText，sortName，sortOrder  
         //设置为limit可以获取limit, offset, search, sort, order  
         queryParamsType : "undefined",   
         queryParams: function queryParams(params) {   //设置查询参数  
        	 return null;
         },  
         responseHandler:function responseHandler(res) {
        	 if (res.result==0) {
	        	 return {
	        		 "rows": res.dataList,
	        		 "total": res.records
	        	 };

        	 } else {
        		 bootbox.alert(res.resultNote);
        		 return {
			        	 "rows": [],
			        	 "total": 0
			        	 };
        	 }
         },
         columns: [{
             field: 'tableId', 
             title: '序号',  	     
     	    align: 'center',
             valign: 'middle',
     	    visible:false
             },{
 	        field: 'financeId',
 	        title: '融资承诺函',
 	        align: 'center',
            valign: 'middle'
 	    }, {
 	        field: 'payDate',
 	        title: '到账日期',
 	        align: 'center',
            valign: 'middle',
 	    }, {
 	        field: 'opearte',
 	        title: '操作',
 	        align: 'center',
            valign: 'middle',
            formatter:function(value,row,index) {
				if (value == "delete") {
					return "删除";
				} else {
					return "新增";
				}
	    	}
 	    }, {
 	        field: 'payGuarantee',
 	        title: '金额',
 	        align: 'center',
            valign: 'middle',
         
 	    }, {
 	        field: 'payWay',
 	        title: '方式',
 	       align: 'center',
           valign: 'middle'
 	    },{
 	        field: 'note',
 	        title: '备注',
 	        align: 'center',
 	        valign: 'middle'
 	    }, {
 	        field: 'operation',
 	        title: '删除',
 	        align: 'center',
            valign: 'middle',
 	        formatter:function(value,row,index){
				var r = '<a class = "fa fa-trash-o remove" style="color:#278bdd;padding:0px 5px;" title="删除" href="javascript:void(0)"></a>';
 	            return  r ;
