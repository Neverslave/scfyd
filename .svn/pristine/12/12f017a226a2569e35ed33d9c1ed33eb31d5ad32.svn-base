		bootbox.alert("业务类型为空，请确认");
	    return false;
	}
    var jsonData = {
    	peopleType: $("#peopleType  option:selected").val()
    
    };
    jsonData = JSON.stringify(jsonData);
    var options = {

        url: '../../../sign/recomend',
        data: jsonData,
        callBackFun: function(data) {
            // reqContractPage(data);
        	if(data==""){
        		bootbox.alert("计划放款时间为空，请确认");
        	}else{
        		  $('#contractNo').val(data);
                  url = data;
        	}
          
        }

    };
    CloudUtils.ajax(options);

}
