function dateload() {
    $('#simpleDate').datetimepicker({
        language: 'zh-CN',
        autoclose: 1,
        todayBtn: true, // 显示今天时间
        initialDate: new Date(), //初始化当前日期
        pickerPosition: "bottom-left",
        minuteStep: 5,
        format: 'yyyy-mm-dd',
        minView: 'month'　　　　 // 日期时间选择器所能够提供的最精确的时间选择视图。
    });

}



var orderBy ="";
var orderByName="";
function initTable() {
    $('#repaymentListTable').bootstrapTable('destroy');
    $("#repaymentListTable").bootstrapTable({
        method: "post",
        url: "../../ssmRepay/repayDaySum",
        striped: false, //表格显示条纹  
        pagination: true, //启动分页  
        pageSize: 5, //每页显示的记录数  
        pageNumber: 1, //当前第几页  
        pageList: [5, 10, 15, 20, 25], //记录数可选列表  
        search: false, //是否启用查询  
        showColumns: false, //显示下拉框勾选要显示的列  
        showRefresh: false, //显示刷新按钮  
        sidePagination: "server", //表示服务端请求  
        //设置为undefined可以获取pageNumber，pageSize，searchText，sortName，sortOrder  
        //设置为limit可以获取limit, offset, search, sort, order  
        queryParamsType: "undefined",
        queryParams: function queryParams(params) {
            var dataTemp = CloudUtils.convertStringJson('searchForm');
            var jsonData = eval("(" + dataTemp + ")");
            jsonData.pageNumber = params.pageNumber;
            jsonData.pageSize = params.pageSize;
            jsonData.orderBy = orderBy;
            jsonData.orderByName=orderByName;
//            return dataTemp;
             return JSON.stringify(jsonData);
        },
        responseHandler: function responseHandler(res) {
            if (res.result == 0) {
                return {
                    "rows": res.dataList,
                    "total": res.records
                };

            } else {
                bootbox.alert(res.resultNote);
                return {
                    "rows": [],
                    "total": 0
                };
            }
        },
        columns: [{
            field: 'simpleDate',
            title: '回款日期',
            align: 'center',
            valign: 'middle',
            sortable: true
        }, {
            field: 'businessType',
            title: '业务类型',
            align: 'center',
            valign: 'middle',
            formatter: function(value) {
                if(value=='1'){
                	return "学生";
                }else if(value=='2'){
                	return "家庭宽带";
                }else if(value=='3'){
                	return "翼支付";
                }
            },
            sortable: true
        },  {
            field: 'repayNum',
            title: '回款数量',
            align: 'center',
            valign: 'middle',
            sortable: true
        }, {
            field: 'repayAmt',
            title: '回款金额',
            align: 'center',
            valign: 'middle',
            formatter: function(value) {
                return $.number(value, 2);
            },
            sortable: true
        }, {
            field: 'repayAutAmt',
            title: '实际回款金额',
            align: 'center',
            valign: 'middle',
            formatter: function(value) {
                return $.number(value, 2);
            },
            sortable: true
     
        }, {
            field: 'note',
            title: '备注',
            align: 'center',
            valign: 'middle',
            sortable: true
        },{
            field: 'operation',
            title: '回款详情',
            align: 'center',
            valign: 'middle',
            formatter: function(value, row, index) {
                var m = '<a class = "fa fa-list-ul detail" style="color:#278bdd;padding:0px 5px;" title="详情" href="javascript:void(0)"></a>';

                return m;
            },
            events: 'operateEvents'
        },{
            field: 'operation2',
            title: '编辑',
            align: 'center',
            valign: 'middle',
            formatter: function(value, row, index) {
                var m = '<a class = "fa fa-list-ul modify" style="color:#278bdd;padding:0px 5px;" title="编辑" href="javascript:void(0)"></a>';

                return m;
            },
            events: 'operateEvents'
        }],
        onSort:function(name, order){
            orderBy = order;
            orderByName=name;
        },
    });
}


window.operateEvents = {
    'click .detail': function(e, value, row, index) {
        $("#repayModal").modal("show");
        initRepayPlanListTable(row.simpleDate,row.businessType);
    },'click .modify': function(e, value, row, index) {
    	modifyFun(row)
    },
};
function modifyFun(row) {
	CloudUtils.setForm(row,'detailForm');

 	$('#detailModal').modal({backdrop: 'static', keyboard: false});
    $("#repayAutAmt").number(true, 2);
}


var orderByRepayment ="";
var orderByRepaymentName="";
function initRepayPlanListTable(simpleDate,businessType) {
    $('#repayPlanListTable').bootstrapTable('destroy');
    $("#repayPlanListTable").bootstrapTable({
        method: "post",
        url: "../../sign/repayListPage",
        striped: false, //表格显示条纹  
        pagination: true, //启动分页  
        pageSize: 18, //每页显示的记录数  
        pageNumber: 1, //当前第几页  
        pageList: [12,18, 24, 50,100,200,500], //记录数可选列表  
        search: false, //是否启用查询  
        showColumns: false, //显示下拉框勾选要显示的列  
        showRefresh: false, //显示刷新按钮  
        sidePagination: "server", //表示服务端请求  
        //设置为undefined可以获取pageNumber，pageSize，searchText，sortName，sortOrder  
        //设置为limit可以获取limit, offset, search, sort, order  
        queryParamsType: "undefined",
        queryParams: function queryParams(params) {
            var jsonData = {
                pageNumber: params.pageNumber,
                pageSize: params.pageSize,
                peopleType: businessType,
                payedTime:simpleDate,
                orderBy:orderByRepayment,
                orderByName:orderByRepaymentName,

            };
            return JSON.stringify(jsonData);
            // return JSON.stringify({});
        },
        responseHandler: function responseHandler(res) {
            if (res.result == 0) {
                return {
                    "rows": res.dataList,
                    "total": res.records
                };

            } else {
                bootbox.alert(res.resultNote);
                return {
                    "rows": [],
                    "total": 0
                };
            }
        },
        columns: [{
            field: 'repayment_id',
            title: '还款计划ID',
            align: 'center',
            valign: 'middle',
            sortable : true
        }, {
            field: 'order_id',
            title: '订单编号',
            align: 'center',
            valign: 'middle',
            sortable : true
        }, {
            field: 'order_batch_id',
            title: '批次编号',
            align: 'center',
            valign: 'middle',
            sortable : true
        }, {
            field: 'period',
            title: '第几期',
            align: 'center',
            valign: 'middle'  ,
            sortable : true     
        },{
            field: 'current_repay_date',
            title: '应付日期',
            align: 'center',
            valign: 'middle',
            sortable : true
        },{
            field: 'interest',
            title: '资方利息',
            align: 'center',
            valign: 'middle',
            sortable : true,
            formatter: function(value, row) {
                return $.number(value, 2);
            }
        },{
            field: 'lc_money',
            title: '超人服务费',
            align: 'center',
            valign: 'middle',
            sortable : true,
            formatter: function(value, row) {
                return $.number(value, 2);
            }
        },{
            field: 'current_money',
            title: '资方本金',
            align: 'center',
            valign: 'middle',
            sortable : true,
            formatter: function(value, row) {
                return $.number(value, 2);
            }
        },{
            field: 'ensure_money',
            title: '保证金',
            align: 'center',
            valign: 'middle',
            sortable : true,
            formatter: function(value, row) {
                return $.number(value, 2);
            }
        },{
            field: 'payed_time',
            title: '实付时间',
            align: 'center',
            valign: 'middle',
            sortable : true
        },{
            field: 'repayment_money',
            title: '用户应还金额',
            align: 'center',
            valign: 'middle',
            sortable : true,
            formatter: function(value, row) {
                return $.number(value, 2);
            }
        },{
            field: 'paid_money',
            title: '用户实还金额',
            align: 'center',
            valign: 'middle',
            sortable : true,
            formatter: function(value, row) {
                return $.number(value, 2);
            }
        },{
            field: 'state',
            title: '订单状态',
            align: 'center',
            valign: 'middle',
            sortable : true,
            formatter:function(value){
            	if(value=='0'||value==""||value==null){
            		return "未还款";
            	}else if (value=='1'){
            		return "还款完成";
            	}else if (value=='2'){
            		return "还款不足";
            	}else if (value=='3'){
            		return "超额还款";
            	}else if (value=='5'){
            		return "已取消";
            	}else if (value=='6'){
            		return "取消中";
            	}else if (value=='7'){
            		return "退订中";
            	}else if (value=='8'){
            		return "提前结清中";
            	}else{
            		return value;
            	}
            		
            	
            }
        },{
            field: 'ensure_money_state',
            title: '保证金是否退还',
            align: 'center',
            valign: 'middle',
            sortable : true,
            formatter:function(value){
            	if(value=='0'||value==""||value==null){
            		return "未退还";
            	}else if (value=='1'){
            		return "已退还";
            	}else{
            		return value;
            	}
            }
        }       
        ],
        onSort:function(name, order){
        	orderByRepayment = order;
        	orderByRepaymentName=name;
        },
    });
}


//form验证规则
function formValidator() {
    $('#detailForm').bootstrapValidator({
            message: 'This value is not valid',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
            	repayAutAmt: {
                    validators: {
                        notEmpty: {
                            message: '实还金额不可以为空'
                        }
     
                    }
                }

            }



        })
        .on('success.form.bv', function(e) {
            e.preventDefault();
        });
}
