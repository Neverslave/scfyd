function chgTemplate(templateKey) {
	var options = {
		url : '../../ydcommon/cnhTemplateUrl',
		data : JSON.stringify({
			templateKey: templateKey
		}),
		callBackFun : function(data) {
			if(data.result==0){
				$("#templateUrl").val(data.str);
			}else{
				bootbox.alert(data.resultNote);
				return false;
			}
		},
